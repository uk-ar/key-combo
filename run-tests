#!/usr/bin/env emacs --script

(let ((current-directory (file-name-directory load-file-name)))
  (setq key-combo-test-path (expand-file-name "." current-directory))
  (setq key-combo-root-path (expand-file-name ".." current-directory)))

(add-to-list 'load-path key-combo-root-path)
(add-to-list 'load-path key-combo-test-path)

;; (require 'key-combo)
;; (require 'cl)

(dolist (test-file (or argv (directory-files key-combo-test-path t "-tests.el$")))
  (load test-file nil t))

;; run tests
(ert-run-tests-batch-and-exit t)

